@model IEnumerable<PMQL.Models.Person>

<h2>Danh sách Person</h2>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>

<table border="1">
    <tr>
        <th>Mã</th>
        <th>Họ tên</th>
        <th>Địa chỉ</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.PersonId</td>
            <td>@item.FullName</td>
            <td>@item.Address</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonId">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.PersonId">Xóa</a>
            </td>
        </tr>
    }
    <form asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>
</table>
